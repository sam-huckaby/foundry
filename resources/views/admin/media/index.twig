{% extends "layouts/admin.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="foundry-header">Media Library</h1>
        <a href="/admin/media/create" class="btn btn-foundry">
            <i class="bi bi-cloud-upload"></i> Upload Files
        </a>
    </div>

    <div class="row">
        {% for file in media %}
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                {% if file.mime_type starts with 'image/' %}
                <img src="{{ file.file_path }}" class="card-img-top" alt="{{ file.original_filename }}">
                {% else %}
                <div class="card-img-top text-center py-4 bg-light">
                    <i class="bi bi-file-earmark-text display-1"></i>
                </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title text-truncate">{{ file.original_filename }}</h5>
                    <p class="card-text small text-muted">
                        {{ (file.file_size / 1024)|round(2) }} KB
                        <br>
                        {{ file.mime_type }}
                    </p>
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                onclick="copyPath('{{ file.file_path }}')">
                            <i class="bi bi-clipboard"></i>
                        </button>
                        <a href="{{ file.file_path }}" class="btn btn-sm btn-outline-secondary" 
                           target="_blank">
                            <i class="bi bi-eye"></i>
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                onclick="confirmDelete({{ file.id }})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<form id="delete-form" method="POST" style="display: none;">
    <input type="hidden" name="_METHOD" value="DELETE">
</form>

<script>
function confirmDelete(id) {
    if (confirm('Are you sure you want to delete this file?')) {
        const form = document.getElementById('delete-form');
        form.action = `/admin/media/${id}`;
        form.submit();
    }
}

function copyPath(path) {
    navigator.clipboard.writeText(path).then(() => {
        alert('File path copied to clipboard!');
    });
}
</script>
{% endblock %} 