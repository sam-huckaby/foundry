{% extends "layouts/admin.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="huckabuild-header">Users</h1>
        <a href="/admin/users/create" class="btn btn-huckabuild">
            <i class="bi bi-person-plus"></i> New User
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Display Name</th>
                            <th>Username</th>
                            <th>Last Login</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.display_name }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.last_login ? user.last_login|date("M d, Y H:i") : 'Never' }}</td>
                            <td>
                                {% if user.password_reset_required %}
                                    <span class="badge bg-warning">Password Reset Required</span>
                                {% else %}
                                    <span class="badge bg-success">Active</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/admin/users/{{ user.id }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            onclick="confirmDelete({{ user.id }})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form id="delete-form" method="POST" style="display: none;">
    <input type="hidden" name="_METHOD" value="DELETE">
</form>

<script>
function confirmDelete(id) {
    if (confirm('Are you sure you want to delete this user?')) {
        const form = document.getElementById('delete-form');
        form.action = `/admin/users/${id}`;
        form.submit();
    }
}
</script>
{% endblock %} 